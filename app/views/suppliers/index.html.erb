<p style="color: green"><%= notice %></p>

<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Responsible</th>
      <th>Activity</th>
      <th>Commission</th> 
      <th>City</th>     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.company %></td>
        <td><%= supplier.responsible %></td>
        <td><%= supplier.activity %></td>
        <td><%= supplier.commission %></td>
        <td><%= supplier.city.city_name %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New supplier", new_supplier_path %>
<%= link_to 'Voltar', root_path %>
