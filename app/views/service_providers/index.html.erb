<p style="color: green"><%= notice %></p>

<h1>Service providers</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_providers.each do |provider| %>
      <tr>
        <td><%= provider.person %></td>
        <td><%= provider.activity %></td>
        <td><%= link_to 'Show', provider %></td>
        <td><%= link_to 'Edit', edit_service_provider_path(provider) %></td>
        <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New service provider", new_service_provider_path %>
